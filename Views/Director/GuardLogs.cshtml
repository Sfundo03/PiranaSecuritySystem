@model IEnumerable<PiranaSecuritySystem.Models.GuardCheckIn>
@{
    ViewBag.Title = "Guard Logs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Guard Check-in Logs</h1>
        <div>
            <a href="@Url.Action("Dashboard", "Director")" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Filter Logs</h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("GuardLogs", "Director", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Start Date</label>
                            <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>End Date</label>
                            <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Guard</label>
                            @Html.DropDownList("guardId", ViewBag.GuardsList as SelectList, "All Guards", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-filter"></i> Filter
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Logs Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Guard Check-in Records</h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Guard Name</th>
                                <th>Site Username</th>
                                <th>Expected Time</th>
                                <th>Actual Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                <tr>
                                    <td>@log.CheckInTime.ToString("MM/dd/yyyy")</td>
                                    <td>@log.CheckInTime.ToString("HH:mm:ss")</td>
                                    <td>@(log.Guard?.FullName ?? "Unknown Guard")</td>
                                    <td>@log.SiteUsername</td>
                                    <td>@log.ExpectedTime</td>
                                    <td>@log.ActualTime</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No guard check-in records found for the selected filters.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#dataTable').DataTable({
                "order": [[0, "desc"], [1, "desc"]],
                "pageLength": 25,
                "language": {
                    "search": "Search logs:",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)"
                }
            });
        });
    </script>
}