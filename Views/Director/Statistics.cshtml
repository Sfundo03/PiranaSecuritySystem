@model PiranaSecuritySystem.Controllers.StatisticsViewModel

@{
    ViewBag.Title = "Incident Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Incident Statistics</h2>

<div class="row">
    <div class="col-md-3">
        <div class="stat-card">
            <h3>@Model.TotalIncidents</h3>
            <p>Total Incidents</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <h3>@Model.ResolvedIncidents</h3>
            <p>Resolved</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <h3>@Model.PendingIncidents</h3>
            <p>Pending</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <h3>@Model.InProgressIncidents</h3>
            <p>In Progress</p>
        </div>
    </div>
</div>

