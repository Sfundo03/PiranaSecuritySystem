@model PiranaSecuritySystem.Models.Shifts

    ViewBag.Title = "My Calendar";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>My Calendar</h2>
            <p class="text-muted">View your upcoming shifts</p>

            <div class="card">
                <div class="card-header">
                    <h5 class="m-0 font-weight-bold">Upcoming Shifts</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Start Time</th>
                                        <th>End Time</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var shift in Model)
                                    {
                                        <tr>
                                            <td>@shift.StartDate.ToString("MMM dd, yyyy")</td>
                                            <td>@shift.StartTime</td>
                                            <td>@shift.EndTime</td>
                                            <td>@shift.Location</td>
                                            <td>
                                                <span class="badge bg-info">Scheduled</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No upcoming shifts found.
                        </div>
                    }
                </div>
            </div>

            <div class="mt-3">
                <a href="@Url.Action("Dashboard", "Guard")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>