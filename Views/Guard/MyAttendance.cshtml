﻿@model IEnumerable<PiranaSecuritySystem.Models.GuardAttendance>

@{
    ViewBag.Title = "My Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>My Attendance Records</h2>
    <hr />

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <h5>Attendance History</h5>
                </div>
                <div class="col-md-6 text-right">

                    <a href="~/Content/Guard/Index.html" class="btn btn-primary">View My Attendance</a>
                    </a>
                    <a href="@Url.Action("Dashboard", "Guard")" class="btn btn-secondary">
                        Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Time In</th>
                                <th>Time Out</th>
                                <th>Status</th>
                                <th>Hours Worked</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model)
                            {
                                <tr>
                                    <td>@record.Date.ToString("MMM dd, yyyy")</td>
                                    <td>@record.TimeIn.ToString("HH:mm")</td>
                                    <td>@(record.TimeOut.HasValue ? record.TimeOut.Value.ToString("HH:mm") : "N/A")</td>
                                    <td>
                                        <span class="badge badge-@(record.Status == "Present" ? "success" : "warning")">
                                            @record.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (record.TimeOut.HasValue)
                                        {
                                            var hours = (record.TimeOut.Value - record.TimeIn).TotalHours;
                                            <span>@hours.ToString("F1") hours</span>
                                        }
                                        else
                                        {
                                            <span>N/A</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    You don't have any attendance records yet.
                </div>
            }
        </div>
    </div>
</div>