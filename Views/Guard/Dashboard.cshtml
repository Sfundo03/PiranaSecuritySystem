<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guard Dashboard - PIRANA GUARDING</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #0069aa;
            --secondary-blue: #004a7c;
            --accent-orange: #f26522;
            --light-bg: #f8f9fa;
            --dark-text: #333333;
            --light-text: #6c757d;
            --border-color: #dee2e6;
        }

        body {
            background-color: var(--light-bg);
            font-family: 'Roboto', sans-serif;
            color: var(--dark-text);
            padding-top: 20px;
        }

        .card {
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
            border: 1px solid var(--border-color);
            margin-bottom: 20px;
        }

        .card-header {
            background: white;
            color: var(--primary-blue);
            border-bottom: 2px solid var(--primary-blue);
            font-weight: 600;
        }

        .btn {
            padding: 12px;
            border-radius: 4px;
            font-weight: 500;
            transition: all 0.3s;
            font-size: 16px;
        }

        .btn-primary {
            background: var(--primary-blue);
            border: none;
        }

            .btn-primary:hover {
                background: var(--secondary-blue);
            }

        .btn-secondary {
            background: #6c757d;
            border: none;
        }

        .btn-danger {
            background: #dc3545;
            border: none;
        }

        .btn-info {
            background: #17a2b8;
            border: none;
        }

        .alert {
            border-radius: 6px;
            border-left: 3px solid;
        }

        .alert-info {
            border-left-color: var(--primary-blue);
        }

        .alert-success {
            border-left-color: #28a745;
        }

        .alert-danger {
            border-left-color: #dc3545;
        }

        .badge {
            font-weight: 500;
            padding: 0.5em 0.8em;
        }

        h4, h5, h6 {
            color: var(--primary-blue);
            font-weight: 600;
        }

        .table th {
            color: var(--primary-blue);
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Welcome Message -->
                <div class="alert alert-info">
                    <h4>Welcome, John Smith!</h4>
                    <p>You have successfully logged in to the Pirana Security System guard portal.</p>
                </div>

                <div class="alert alert-success" style="display: none;">
                    <!-- Success messages will appear here -->
                </div>

                <div class="alert alert-danger" style="display: none;">
                    <!-- Error messages will appear here -->
                </div>

                <div class="row">
                    <!-- Guard Details Card -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5>My Security Guard Details</h5>
                            </div>
                            <div class="card-body">
                                <table class="table table-borderless">
                                    <tr>
                                        <th style="width: 40%">PSIRA Number:</th>
                                        <td>PSIRA-123456</td>
                                    </tr>
                                    <tr>
                                        <th>Full Name:</th>
                                        <td>John Smith</td>
                                    </tr>
                                    <tr>
                                        <th>Email:</th>
                                        <td>john.smith@example.com</td>
                                    </tr>
                                    <tr>
                                        <th>Phone:</th>
                                        <td>+1 234 567 8901</td>
                                    </tr>
                                    <tr>
                                        <th>Status:</th>
                                        <td>
                                            <span class="badge bg-success">Active</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Date Registered:</th>
                                        <td>Jan 15, 2023</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions Card -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5>Security Operations</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <!-- Mark Attendance Button -->
                                    <a href="#" class="btn btn-primary mb-3">
                                        <i class="fas fa-fingerprint me-2"></i>Mark My Attendance
                                    </a>

                                    <!-- My Calendar Button -->
                                    <a href="#" class="btn btn-secondary mb-3">
                                        <i class="fas fa-calendar me-2"></i>My Calendar
                                    </a>

                                    <!-- Report Incident Button -->
                                    <a href="#" class="btn btn-danger mb-3">
                                        <i class="fas fa-exclamation-circle me-2"></i>Report Incident
                                    </a>

                                    <!-- View Incidents -->
                                    <a href="#" class="btn btn-info">
                                        <i class="fas fa-clipboard-list me-2"></i>View My Incidents
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Today's Security Stats -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h5>Today's Security Overview</h5>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-md-3 mb-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <h6 class="card-title">Incidents Today</h6>
                                                <h3 class="text-primary">2</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <h6 class="card-title">Check-ins</h6>
                                                <h3 class="text-success">3</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <h6 class="card-title">Patrols Completed</h6>
                                                <h3 class="text-info">5</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <h6 class="card-title">Active Alerts</h6>
                                                <h3 class="text-warning">1</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Simulate loading data
            setTimeout(function () {
                // Show a success message
                document.querySelector('.alert-success').style.display = 'block';
                document.querySelector('.alert-success').textContent = 'Your last check-in was recorded at 08:45 AM.';

                // Simulate today's stats
                const stats = {
                    incidents: 2,
                    checkins: 3,
                    patrols: 5,
                    alerts: 1
                };

                // Update stats (if we had IDs for these elements)
            }, 1000);

            // Auto-dismiss alerts after 5 seconds
            setTimeout(function () {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(function (alert) {
                    if (alert.style.display !== 'none') {
                        alert.style.opacity = '1';

                        const fadeOut = setInterval(function () {
                            if (alert.style.opacity > 0) {
                                alert.style.opacity -= 0.05;
                            } else {
                                clearInterval(fadeOut);
                                alert.style.display = 'none';
                            }
                        }, 100);
                    }
                });
            }, 5000);
        });
    </script>
</body>
</html>