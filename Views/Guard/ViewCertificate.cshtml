@model PiranaSecuritySystem.Models.AssessmentResult
@{
    ViewBag.Title = "Training Certificate";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Training Certificate - @Model.Guard.FullName</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: #f5f5f5;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            font-family: 'Georgia', 'Times New Roman', serif;
            margin: 0;
        }

        .certificate-container {
            background: #fffdf5;
            border-radius: 8px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            padding: 60px 50px;
            max-width: 850px;
            width: 100%;
            border: 20px solid #8B4513;
            position: relative;
            overflow: hidden;
            background-image: radial-gradient(circle at 25% 25%, rgba(139, 69, 19, 0.03) 0%, transparent 50%), radial-gradient(circle at 75% 75%, rgba(139, 69, 19, 0.03) 0%, transparent 50%);
        }

        .certificate-header {
            text-align: center;
            margin-bottom: 40px;
            position: relative;
        }

        .certificate-title {
            font-size: 3rem;
            font-weight: bold;
            color: #8B4513;
            margin-bottom: 15px;
            text-transform: uppercase;
            letter-spacing: 4px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }

        .certificate-subtitle {
            font-size: 1.4rem;
            color: #666;
            margin-bottom: 20px;
            font-style: italic;
        }

        .certificate-body {
            text-align: center;
            margin: 50px 0;
        }

        .certificate-text {
            font-size: 1.3rem;
            line-height: 1.8;
            color: #333;
            margin-bottom: 30px;
        }

        .guard-name {
            font-size: 2.5rem;
            font-weight: bold;
            color: #8B4513;
            margin: 30px 0;
            padding: 20px 40px;
            border-bottom: 3px solid #D4AF37;
            border-top: 3px solid #D4AF37;
            display: inline-block;
            font-family: 'Times New Roman', serif;
        }

        .training-details {
            background: rgba(139, 69, 19, 0.05);
            border-radius: 8px;
            padding: 30px;
            margin: 40px 0;
            border: 1px solid rgba(139, 69, 19, 0.2);
        }

        .signature-section {
            margin-top: 50px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .signature {
            text-align: center;
        }

        .signature-line {
            width: 250px;
            border-bottom: 2px solid #8B4513;
            margin: 20px 0;
        }

        .certificate-footer {
            text-align: center;
            margin-top: 40px;
            color: #666;
            font-size: 1rem;
            padding-top: 20px;
            border-top: 1px solid #ddd;
        }

        .watermark {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-45deg);
            font-size: 140px;
            color: rgba(139, 69, 19, 0.03);
            font-weight: bold;
            z-index: 0;
            white-space: nowrap;
            font-family: 'Georgia', serif;
        }

        .print-btn {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            background: #8B4513;
            border: none;
            padding: 12px 24px;
            border-radius: 6px;
            box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
            color: white;
            font-weight: bold;
        }

            .print-btn:hover {
                background: #654321;
                transform: translateY(-2px);
            }

        .score-display {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .text-success {
            color: #228B22 !important;
        }

        .text-info {
            color: #8B4513 !important;
        }

        @@media print {
            body {
                background: white !important;
            }

            .print-btn {
                display: none;
            }

            .certificate-container {
                box-shadow: none;
                border: 25px solid #8B4513;
                margin: 0;
                padding: 50px 40px;
            }
        }

        .certificate-number {
            background: #8B4513;
            color: white;
            padding: 10px 25px;
            border-radius: 6px;
            font-family: 'Courier New', monospace;
            font-weight: bold;
            display: inline-block;
            margin: 15px 0;
            font-size: 1.1rem;
        }

        .training-title {
            font-size: 1.6rem;
            color: #8B4513;
            font-weight: 600;
            margin: 20px 0;
            font-style: italic;
        }

        .gold-accent {
            color: #D4AF37;
        }

        .border-accent {
            border-color: #D4AF37;
        }

        /* Decorative elements */
        .corner-decoration {
            position: absolute;
            width: 80px;
            height: 80px;
            border: 2px solid #D4AF37;
        }

        .corner-tl {
            top: 20px;
            left: 20px;
            border-right: none;
            border-bottom: none;
        }

        .corner-tr {
            top: 20px;
            right: 20px;
            border-left: none;
            border-bottom: none;
        }

        .corner-bl {
            bottom: 20px;
            left: 20px;
            border-right: none;
            border-top: none;
        }

        .corner-br {
            bottom: 20px;
            right: 20px;
            border-left: none;
            border-top: none;
        }
    </style>
</head>
<body>
    <button class="btn print-btn" onclick="window.print()">
        <i class="fas fa-print me-2"></i>Print Certificate
    </button>

    <div class="certificate-container">
        <!-- Corner Decorations -->
        <div class="corner-decoration corner-tl"></div>
        <div class="corner-decoration corner-tr"></div>
        <div class="corner-decoration corner-bl"></div>
        <div class="corner-decoration corner-br"></div>

        <div class="watermark">PIRANA SECURITY</div>

        <div class="certificate-header">
            <div class="certificate-title">
                <i class="fas fa-award gold-accent me-3"></i>
                Certificate of Achievement
                <i class="fas fa-award gold-accent ms-3"></i>
            </div>
            <div class="certificate-subtitle">
                This is to certify that
            </div>
        </div>

        <div class="certificate-body">
            <div class="guard-name">
                @Model.Guard.FullName
            </div>

            <div class="certificate-text">
                has successfully completed the training course and assessment for
            </div>

            <div class="training-title">
                "@Model.TrainingSession.Title"
            </div>

            <div class="training-details">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-4">
                            <strong>Score Achieved:</strong><br>
                            <span class="score-display text-success">
                                @Model.Score.ToString("0.0")%
                            </span>
                        </div>
                        <div class="mb-4">
                            <strong>Training Date:</strong><br>
                            <span style="font-size: 1.2rem;">
                                @Model.TrainingSession.StartDate.ToString("MMMM dd, yyyy")
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-4">
                            <strong>Passing Score:</strong><br>
                            <span class="score-display text-info">
                                @Model.PassingPercentage.ToString("0.0")%
                            </span>
                        </div>
                        <div class="mb-4">
                            <strong>Assessment Date:</strong><br>
                            <span style="font-size: 1.2rem;">
                                @Model.AssessmentDate.ToString("MMMM dd, yyyy")
                            </span>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <strong>Certificate Number:</strong><br>
                    <span class="certificate-number">@Model.CertificateNumber</span>
                </div>
            </div>

            <div class="certificate-text" style="font-style: italic;">
                demonstrating exceptional proficiency and commitment to excellence in security services.
            </div>
        </div>

        <div class="signature-section">
            <div class="signature">
                <div class="signature-line"></div>
                <div style="font-weight: bold; color: #8B4513;">@Model.AssessedBy</div>
                <div class="text-muted">Training Instructor</div>
            </div>
            <div class="signature">
                <div class="signature-line"></div>
                <div style="font-weight: bold; color: #8B4513;">Pirana Security Systems</div>
                <div class="text-muted">Authorized Representative</div>
            </div>
        </div>

        <div class="certificate-footer">
            <p>
                <i class="fas fa-shield-alt me-2 gold-accent"></i>
                <strong>Pirana Security Systems</strong> - Setting the Standard in Security Excellence
                <br>
                <small>This certificate is electronically issued and can be verified through our official training portal.</small>
            </p>
        </div>
    </div>

    <script>
        // Auto-print option
        setTimeout(() => {
            if (confirm('Would you like to print your certificate?')) {
                window.print();
            }
        }, 1500);

        // Add keyboard shortcut for printing
        document.addEventListener('keydown', function (e) {
            if (e.ctrlKey && e.key === 'p') {
                e.preventDefault();
                window.print();
            }
        });
    </script>
</body>
</html>