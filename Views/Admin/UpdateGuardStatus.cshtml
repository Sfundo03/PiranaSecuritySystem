@model PiranaSecuritySystem.Models.Guard

@{
    ViewBag.Title = "Update Guard Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>@TempData["SuccessMessage"]</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>@TempData["ErrorMessage"]</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Update Guard Status</h6>
                    <a href="@Url.Action("ManageGuards")" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("UpdateGuardStatus", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.GuardId)

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-header bg-light">
                                        <h6 class="m-0 font-weight-bold text-primary">Guard Information</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="form-group mb-3">
                                                    <label class="form-label fw-bold">Guard Name</label>
                                                    <p class="form-control-static">@Model.Guard_FName @Model.Guard_LName</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label class="form-label fw-bold">PSIRA Number</label>
                                                    <p class="form-control-static">@Model.PSIRAnumber</p>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label class="form-label fw-bold">Username</label>
                                                    <p class="form-control-static">@Model.SiteUsername</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label class="form-label fw-bold">Site</label>
                                                    <p class="form-control-static">@Model.Site</p>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label class="form-label fw-bold">Current Status</label>
                                                    <p class="form-control-static">
                                                        @if (Model.IsActive)
                                                        {
                                                            <span class="badge bg-success">Active</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger">Inactive</span>
                                                        }
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-header bg-light">
                                        <h6 class="m-0 font-weight-bold text-primary">Status Update</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-4">
                                            <label for="IsActive" class="form-label fw-bold">New Status</label>
                                            <div class="form-check">
                                                @Html.RadioButtonFor(model => model.IsActive, true, new { @class = "form-check-input", id = "active" })
                                                <label class="form-check-label" for="active">
                                                    <span class="badge bg-success">Active</span> - Guard can access the system
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                @Html.RadioButtonFor(model => model.IsActive, false, new { @class = "form-check-input", id = "inactive" })
                                                <label class="form-check-label" for="inactive">
                                                    <span class="badge bg-danger">Inactive</span> - Guard cannot access the system
                                                </label>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="StatusReason" class="form-label fw-bold">Reason for Status Change</label>
                                            @Html.TextArea("StatusReason", null, new { @class = "form-control", rows = 3, placeholder = "Enter reason for status change (e.g., Resigned, On leave, Suspended, etc.)" })
                                            <small class="form-text text-muted">This will be recorded in the system logs.</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Update Status
                            </button>
                            <a href="@Url.Action("ManageGuards")" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i> Cancel
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Set the current status as selected
            var currentStatus = @Json.Encode(Model.IsActive);
            if (currentStatus) {
                $('#active').prop('checked', true);
            } else {
                $('#inactive').prop('checked', true);
            }

            // Auto-dismiss alerts after 5 seconds
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}