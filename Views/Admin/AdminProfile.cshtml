@model PiranaSecuritySystem.Models.ViewModels.AdminProfileViewModel
@{
    ViewBag.Title = "Admin Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1 text-gray-800">Admin Profile</h1>
                    <p class="text-muted">View and manage your profile information</p>
                </div>
                <a href="@Url.Action("EditProfile", "Admin")" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i> Edit Profile
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <div class="col-lg-4">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Profile Picture</h6>
                        </div>
                        <div class="card-body text-center">
                            <img class="img-profile rounded-circle mb-3" src="https://via.placeholder.com/150" width="150" height="150" alt="Admin Profile">
                            <h5 class="font-weight-bold">@Model.FullName</h5>
                            <p class="text-muted">@Model.Department</p>
                            <button class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-camera me-1"></i> Change Photo
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Profile Information</h6>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Full Name</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.FullName
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Email Address</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.Email
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Phone Number</strong>
                                </div>
                                <div class="col-sm-9">
                                    @(string.IsNullOrEmpty(Model.PhoneNumber) ? "Not provided" : Model.PhoneNumber)
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Department</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.Department
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Last Login</strong>
                                </div>
                                <div class="col-sm-9">
                                    @(Model.LastLoginDate?.ToString("f") ?? "Never logged in")
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Account Security</h6>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-8">
                                    <h6 class="mb-1">Change Password</h6>
                                    <p class="text-muted mb-0">Update your password regularly to keep your account secure</p>
                                </div>
                                <div class="col-sm-4 text-right">
                                    <a href="@Url.Action("ChangePassword", "Manage")" class="btn btn-outline-primary">
                                        <i class="fas fa-key me-1"></i> Change Password
                                    </a>
                                </div>
                            </div>
                            <hr>
                            <div class="row mb-3">
                                <div class="col-sm-8">
                                    <h6 class="mb-1">Two-Factor Authentication</h6>
                                    <p class="text-muted mb-0">Add an extra layer of security to your account</p>
                                </div>
                                <div class="col-sm-4 text-right">
                                    <a href="@Url.Action("Index", "Manage")" class="btn btn-outline-info">
                                        <i class="fas fa-shield-alt me-1"></i> Enable 2FA
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

