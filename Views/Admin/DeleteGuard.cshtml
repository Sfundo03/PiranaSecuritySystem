@model PiranaSecuritySystem.Models.Guard

@{
    ViewBag.Title = "Delete Guard";
}

<div class="dashboard-container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="dashboard-card">
                <div class="card-header-custom">
                    <h2 class="mb-0">Delete Guard</h2>
                </div>
                <div class="card-body" style="padding: 30px;">
                    <h3>Are you sure you want to delete this guard?</h3>
                    <div>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3">
                                Name
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Guard_FName) @Html.DisplayFor(model => model.Guard_LName)
                            </dd>

                            <dt class="col-sm-3">
                                Email
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Email)
                            </dd>

                            <dt class="col-sm-3">
                                Phone
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </dd>

                            <dt class="col-sm-3">
                                Status
                            </dt>
                            <dd class="col-sm-9">
                                @if (Model.IsActive)
                                {
                                    <span class="status-active">Active</span>
                                }
                                else
                                {
                                    <span class="status-inactive">Inactive</span>
                                }
                            </dd>
                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="d-flex justify-content-between">
                                @Html.ActionLink("Back to List", "ManageGuards", null, new { @class = "btn btn-secondary" })
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>