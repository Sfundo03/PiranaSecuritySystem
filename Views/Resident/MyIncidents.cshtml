@model IEnumerable<PiranaSecuritySystem.Models.IncidentReport>

@{
    ViewBag.Title = "My Incidents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .incidents-container {
        padding: 20px;
        background: #f5f5f5;
        min-height: 100vh;
    }

    .navigation-header {
        background: #2c3e50;
        color: white;
        padding: 15px 20px;
        border-radius: 5px 5px 0 0;
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .back-button {
        background: #3498db;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: background 0.3s ease;
    }

        .back-button:hover {
            background: #2980b9;
            color: white;
            text-decoration: none;
        }

        .back-button i {
            margin-right: 8px;
        }

    .incidents-header {
        background: #34495e;
        color: white;
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .incident-card {
        background: white;
        border-radius: 5px;
        padding: 20px;
        margin-bottom: 15px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        position: relative;
    }

    .incident-id {
        position: absolute;
        top: 10px;
        right: 10px;
        background: #ecf0f1;
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 0.8em;
        color: #7f8c8d;
    }

    .incident-type {
        font-weight: bold;
        color: #2c3e50;
        font-size: 1.2em;
        margin-right: 100px; /* Space for incident ID */
    }

    .incident-date {
        color: #7f8c8d;
        font-size: 0.9em;
    }

    .incident-status {
        display: inline-block;
        padding: 3px 10px;
        border-radius: 15px;
        font-size: 0.9em;
        font-weight: bold;
    }

    .status-pending {
        background: #f39c12;
        color: white;
    }

    .status-inprogress {
        background: #3498db;
        color: white;
    }

    .status-resolved {
        background: #27ae60;
        color: white;
    }

    .no-incidents {
        text-align: center;
        padding: 40px;
        background: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .view-feedback-btn {
        background: #3498db;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.8em;
        margin-left: 10px;
    }

        .view-feedback-btn:hover {
            background: #2980b9;
        }

    .download-attachment-btn {
        background: #27ae60;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.8em;
        margin-left: 10px;
        text-decoration: none;
        display: inline-block;
    }

        .download-attachment-btn:hover {
            background: #219653;
            color: white;
            text-decoration: none;
        }

    .feedback-modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
    }

    .feedback-modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 50%;
        border-radius: 5px;
        position: relative;
    }

    .close-modal {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

        .close-modal:hover {
            color: black;
        }

    .feedback-text {
        margin-top: 15px;
        padding: 10px;
        background: #f9f9f9;
        border-radius: 4px;
        min-height: 100px;
    }

    .no-feedback {
        color: #7f8c8d;
        font-style: italic;
    }

    .attachment-container {
        margin-top: 15px;
        padding: 10px;
        background: #f0f8ff;
        border-radius: 4px;
        border-left: 4px solid #3498db;
    }

    .action-buttons {
        margin-top: 20px;
        text-align: center;
    }

    .btn-primary {
        background: #3498db;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin: 0 10px;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: #2980b9;
            color: white;
            text-decoration: none;
        }
</style>

<div class="incidents-container">
    <!-- Navigation Header with Back Button -->
    <div class="navigation-header">
        <a href="@Url.Action("Dashboard", "Resident")" class="back-button">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
        <h3 style="margin: 0;">My Incident Reports</h3>
    </div>

    <div class="incidents-header">
        <h2>My Reported Incidents</h2>
        <p>View the status of your reported issues</p>
    </div>

    @if (Model != null && Model.Any())
    {
        foreach (var incident in Model)
        {
            <div class="incident-card">
                <span class="incident-id">ID: @incident.IncidentReportId</span>

                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
                    <span class="incident-type">@incident.IncidentType</span>
                    <span class="incident-date">@incident.ReportDate.ToString("MMM dd, yyyy hh:mm tt")</span>
                </div>

                <div style="margin-bottom: 10px;">
                    <p>@incident.Description</p>
                </div>

                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <div>
                        <span>Location: </span>
                        <strong>@incident.Location</strong>
                    </div>
                    <div>
                        <span class="incident-status status-@incident.Status.ToLower()">@incident.Status</span>
                        <button class="view-feedback-btn" data-incident-id="@incident.IncidentReportId">View Feedback</button>

                        <!-- Direct download button on the incident card -->
                        @if (!string.IsNullOrEmpty(incident.FeedbackAttachment))
                        {
                            <a href="@Url.Action("DownloadFeedbackAttachment", "Resident", new { id = incident.IncidentReportId })"
                               class="download-attachment-btn"
                               title="Download Feedback Attachment">
                                Download PDF
                            </a>
                        }
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(incident.Priority))
                {
                    <div style="margin-top: 10px;">
                        <span>Priority: </span>
                        <strong>@incident.Priority</strong>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="no-incidents">
            <h3>No incidents reported yet</h3>
            <p>You haven't reported any incidents yet.</p>
            <div class="action-buttons">
                <a href="@Url.Action("ReportIncident", "Resident")" class="btn btn-primary">Report an Incident</a>
                <a href="@Url.Action("Dashboard", "Resident")" class="btn btn-primary">Back to Dashboard</a>
            </div>
        </div>
    }

    <!-- Action buttons at the bottom -->
    <div class="action-buttons">
        <a href="@Url.Action("ReportIncident", "Resident")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Report New Incident
        </a>
        <a href="@Url.Action("Dashboard", "Resident")" class="btn btn-primary">
            <i class="fas fa-home"></i> Back to Dashboard
        </a>
    </div>
</div>

<!-- Feedback Modal -->
<div id="feedbackModal" class="feedback-modal">
    <div class="feedback-modal-content">
        <span class="close-modal">&times;</span>
        <h3>Feedback for Incident #<span id="incidentIdDisplay"></span></h3>
        <div class="feedback-text" id="feedbackContent">
            <p class="no-feedback">Loading feedback...</p>
        </div>
        <div id="attachmentContainer" class="attachment-container" style="display: none;">
            <h4>Attachment</h4>
            <a id="downloadAttachmentLink" href="#" class="download-attachment-btn">Download Attachment</a>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Get modal elements
            var modal = document.getElementById("feedbackModal");
            var span = document.getElementsByClassName("close-modal")[0];

            // When user clicks on view feedback button
            $(".view-feedback-btn").click(function () {
                var incidentId = $(this).data("incident-id");
                $("#incidentIdDisplay").text(incidentId);

                // Show loading message
                $("#feedbackContent").html('<p class="no-feedback">Loading feedback...</p>');
                $("#attachmentContainer").hide();

                // Show modal
                modal.style.display = "block";

                // Fetch feedback via AJAX
                $.get('@Url.Action("GetIncidentFeedback", "Resident")', { id: incidentId })
                    .done(function (data) {
                        if (data.error) {
                            $("#feedbackContent").html('<p class="no-feedback">' + data.error + '</p>');
                        } else if (data.feedback) {
                            $("#feedbackContent").html('<p>' + data.feedback + '</p>');

                            // Show attachment if available
                            if (data.hasAttachment && data.attachmentName) {
                                $("#downloadAttachmentLink")
                                    .attr("href", '@Url.Action("DownloadFeedbackAttachment", "Resident")' + '?id=' + incidentId)
                                    .text('Download: ' + data.attachmentName);
                                $("#attachmentContainer").show();
                            } else {
                                $("#attachmentContainer").hide();
                            }
                        } else {
                            $("#feedbackContent").html('<p class="no-feedback">No feedback available for this incident yet.</p>');
                            $("#attachmentContainer").hide();
                        }
                    })
                    .fail(function () {
                        $("#feedbackContent").html('<p class="no-feedback">Error loading feedback. Please try again later.</p>');
                        $("#attachmentContainer").hide();
                    });
            });

            // When user clicks on (x), close the modal
            span.onclick = function () {
                modal.style.display = "none";
            }

            // When user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        });
    </script>
}