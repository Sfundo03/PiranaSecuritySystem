@model IEnumerable<PiranaSecuritySystem.Models.IncidentReport>

@{
    ViewBag.Title = "My Incidents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .incidents-container {
        padding: 20px;
        background: #f5f5f5;
        min-height: 100vh;
    }

    .navigation-header {
        background: #2c3e50;
        color: white;
        padding: 15px 20px;
        border-radius: 5px 5px 0 0;
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .back-button {
        background: #3498db;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: background 0.3s ease;
    }

        .back-button:hover {
            background: #2980b9;
            color: white;
            text-decoration: none;
        }

        .back-button i {
            margin-right: 8px;
        }

    .incidents-header {
        background: #34495e;
        color: white;
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .incident-card {
        background: white;
        border-radius: 5px;
        padding: 20px;
        margin-bottom: 15px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        position: relative;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .incident-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
        }

    .incident-id {
        position: absolute;
        top: 10px;
        right: 10px;
        background: #ecf0f1;
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 0.8em;
        color: #7f8c8d;
        font-weight: bold;
    }

    .incident-type {
        font-weight: bold;
        color: #2c3e50;
        font-size: 1.2em;
        margin-right: 120px;
    }

    .incident-date {
        color: #7f8c8d;
        font-size: 0.9em;
    }

    .incident-status {
        display: inline-block;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.9em;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-pending {
        background: #f39c12;
        color: white;
    }

    .status-inprogress {
        background: #3498db;
        color: white;
    }

    .status-resolved {
        background: #27ae60;
        color: white;
    }

    .status-critical {
        background: #e74c3c;
        color: white;
    }

    .no-incidents {
        text-align: center;
        padding: 40px;
        background: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }

    .view-feedback-btn {
        background: #3498db;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.9em;
        margin-left: 10px;
        transition: background 0.3s ease;
    }

        .view-feedback-btn:hover {
            background: #2980b9;
        }

        .view-feedback-btn:disabled {
            background: #bdc3c7;
            cursor: not-allowed;
        }

    .download-attachment-btn {
        background: #27ae60;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.9em;
        margin-left: 10px;
        text-decoration: none;
        display: inline-block;
        transition: background 0.3s ease;
    }

        .download-attachment-btn:hover {
            background: #219653;
            color: white;
            text-decoration: none;
        }

        .download-attachment-btn:disabled {
            background: #bdc3c7;
            cursor: not-allowed;
        }

    .feedback-modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
    }

    .feedback-modal-content {
        background-color: #fefefe;
        margin: 10% auto;
        padding: 30px;
        border: 1px solid #888;
        width: 60%;
        max-width: 600px;
        border-radius: 10px;
        position: relative;
        box-shadow: 0 4px 20px rgba(0,0,0,0.3);
    }

    .close-modal {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
        line-height: 1;
    }

        .close-modal:hover {
            color: #333;
        }

    .feedback-text {
        margin-top: 15px;
        padding: 15px;
        background: #f9f9f9;
        border-radius: 5px;
        min-height: 100px;
        border-left: 4px solid #3498db;
    }

    .no-feedback {
        color: #7f8c8d;
        font-style: italic;
        text-align: center;
        padding: 20px;
    }

    .attachment-container {
        margin-top: 20px;
        padding: 15px;
        background: #f0f8ff;
        border-radius: 5px;
        border-left: 4px solid #3498db;
    }

    .action-buttons {
        margin-top: 30px;
        text-align: center;
    }

    .btn-primary {
        background: #3498db;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        margin: 0 10px;
        transition: background 0.3s ease;
        font-size: 1em;
    }

        .btn-primary:hover {
            background: #2980b9;
            color: white;
            text-decoration: none;
            transform: translateY(-2px);
        }

        .btn-primary i {
            margin-right: 8px;
        }

    .incidents-list {
        margin-bottom: 30px;
    }

    .incident-priority {
        display: inline-block;
        padding: 3px 10px;
        border-radius: 12px;
        font-size: 0.8em;
        font-weight: bold;
        margin-left: 10px;
        text-transform: uppercase;
    }

    .priority-low {
        background: #27ae60;
        color: white;
    }

    .priority-medium {
        background: #f39c12;
        color: white;
    }

    .priority-high {
        background: #e74c3c;
        color: white;
    }

    .priority-critical {
        background: #8e44ad;
        color: white;
    }

    .incident-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
        flex-wrap: wrap;
        gap: 10px;
    }

    .incident-details {
        margin: 10px 0;
        line-height: 1.6;
    }

    .incident-actions {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-top: 15px;
        flex-wrap: wrap;
        gap: 10px;
    }

    @@media (max-width: 768px) {
        .feedback-modal-content {
            width: 90%;
            margin: 5% auto;
            padding: 20px;
        }

        .incident-meta {
            flex-direction: column;
            align-items: flex-start;
        }

        .incident-actions {
            justify-content: flex-start;
            margin-top: 10px;
        }

        .navigation-header {
            flex-direction: column;
            gap: 10px;
            text-align: center;
        }

        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .btn-primary {
            margin: 5px 0;
        }
    }

    .alert {
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .alert-success {
        background: rgba(46, 204, 113, 0.2);
        border: 1px solid #2ecc71;
        color: #27ae60;
    }

    .alert-danger {
        background: rgba(231, 76, 60, 0.2);
        border: 1px solid #e74c3c;
        color: #c0392b;
    }
</style>

<div class="incidents-container">
    <!-- Navigation Header with Back Button -->
    <div class="navigation-header">
        <a href="@Url.Action("Dashboard", "Resident")" class="back-button">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
        <h3 style="margin: 0;">My Incident Reports</h3>
    </div>

    <!-- Display TempData messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        </div>
    }

    <div class="incidents-header">
        <h2><i class="fas fa-clipboard-list"></i> My Reported Incidents</h2>
        <p>View the status and details of your reported security incidents</p>
    </div>

    <div class="incidents-list">
        @if (Model != null && Model.Any())
        {
            foreach (var incident in Model.OrderByDescending(i => i.ReportDate))
            {
                <div class="incident-card">
                    <span class="incident-id">ID: #@incident.IncidentReportId</span>

                    <div class="incident-meta">
                        <div>
                            <span class="incident-type">@incident.IncidentType</span>
                            @if (!string.IsNullOrEmpty(incident.Priority))
                            {
                                <span class="incident-priority priority-@incident.Priority.ToLower()">@incident.Priority</span>
                            }
                        </div>
                        <div>
                            <span class="incident-date">
                                <i class="fas fa-calendar"></i> @incident.ReportDate.ToString("MMM dd, yyyy hh:mm tt")
                            </span>
                        </div>
                    </div>

                    <div class="incident-details">
                        <p><strong>Description:</strong> @incident.Description</p>
                        <p><strong>Location:</strong> @incident.Location</p>
                        <p><strong>Reported By:</strong> @incident.ReportedBy</p>
                    </div>

                    <div class="incident-actions">
                        <span class="incident-status status-@incident.Status.ToLower().Replace(" ", "")">
                            <i class="fas fa-@(incident.Status == "Resolved" ? "check" : incident.Status == "In Progress" ? "sync" : "clock")"></i>
                            @incident.Status
                        </span>

                        <button class="view-feedback-btn"
                                data-incident-id="@incident.IncidentReportId"
                                title="View feedback for this incident">
                            <i class="fas fa-comment"></i> View Feedback
                        </button>

                        @if (!string.IsNullOrEmpty(incident.FeedbackAttachment))
                        {
                            <a href="@Url.Action("DownloadFeedbackAttachment", "Resident", new { id = incident.IncidentReportId })"
                               class="download-attachment-btn"
                               title="Download feedback attachment">
                                <i class="fas fa-download"></i> Download PDF
                            </a>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-incidents">
                <i class="fas fa-clipboard-list" style="font-size: 3em; color: #bdc3c7; margin-bottom: 15px;"></i>
                <h3>No incidents reported yet</h3>
                <p>You haven't reported any incidents yet. Click the button below to report your first incident.</p>
            </div>
        }
    </div>

    <!-- Action buttons at the bottom -->
    <div class="action-buttons">
        <a href="@Url.Action("ReportIncident", "Resident")" class="btn-primary">
            <i class="fas fa-plus"></i> Report New Incident
        </a>
        <a href="@Url.Action("Dashboard", "Resident")" class="btn-primary">
            <i class="fas fa-home"></i> Back to Dashboard
        </a>
    </div>
</div>

<!-- Feedback Modal -->
<div id="feedbackModal" class="feedback-modal">
    <div class="feedback-modal-content">
        <span class="close-modal">&times;</span>
        <h3><i class="fas fa-comment"></i> Feedback for Incident #<span id="incidentIdDisplay"></span></h3>
        <div class="feedback-text" id="feedbackContent">
            <p class="no-feedback">Loading feedback...</p>
        </div>
        <div id="attachmentContainer" class="attachment-container" style="display: none;">
            <h4><i class="fas fa-paperclip"></i> Attachment</h4>
            <a id="downloadAttachmentLink" href="#" class="download-attachment-btn">
                <i class="fas fa-download"></i> Download Attachment
            </a>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Get modal elements
            var modal = document.getElementById("feedbackModal");
            var span = document.getElementsByClassName("close-modal")[0];

            // When user clicks on view feedback button
            $(".view-feedback-btn").click(function () {
                var incidentId = $(this).data("incident-id");
                var button = $(this);

                // Disable button during loading
                button.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Loading...');

                $("#incidentIdDisplay").text(incidentId);

                // Show loading message
                $("#feedbackContent").html('<p class="no-feedback"><i class="fas fa-spinner fa-spin"></i> Loading feedback...</p>');
                $("#attachmentContainer").hide();

                // Show modal
                modal.style.display = "block";

                // Fetch feedback via AJAX
                $.get('@Url.Action("GetIncidentFeedback", "Resident")', { id: incidentId })
                    .done(function (data) {
                        if (data.error) {
                            $("#feedbackContent").html('<p class="no-feedback"><i class="fas fa-exclamation-triangle"></i> ' + data.error + '</p>');
                        } else if (data.feedback) {
                            $("#feedbackContent").html('<p style="white-space: pre-wrap;">' + data.feedback + '</p>');

                            // Show attachment if available
                            if (data.hasAttachment && data.attachmentName) {
                                $("#downloadAttachmentLink")
                                    .attr("href", '@Url.Action("DownloadFeedbackAttachment", "Resident")' + '?id=' + incidentId)
                                    .text('Download: ' + data.attachmentName);
                                $("#attachmentContainer").show();
                            } else {
                                $("#attachmentContainer").hide();
                            }
                        } else {
                            $("#feedbackContent").html('<p class="no-feedback"><i class="fas fa-info-circle"></i> No feedback available for this incident yet. Please check back later.</p>');
                            $("#attachmentContainer").hide();
                        }
                    })
                    .fail(function (xhr, status, error) {
                        console.error('Error loading feedback:', error);
                        $("#feedbackContent").html('<p class="no-feedback"><i class="fas fa-exclamation-triangle"></i> Error loading feedback. Please try again later.</p>');
                        $("#attachmentContainer").hide();
                    })
                    .always(function () {
                        // Re-enable button
                        button.prop('disabled', false).html('<i class="fas fa-comment"></i> View Feedback');
                    });
            });

            // When user clicks on (x), close the modal
            span.onclick = function () {
                modal.style.display = "none";
            }

            // When user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }

            // Close modal with Escape key
            $(document).keyup(function (e) {
                if (e.keyCode === 27) { // Escape key
                    modal.style.display = "none";
                }
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').fadeOut(1000, function () {
                    $(this).remove();
                });
            }, 5000);

            // Add click to close for alerts
            $('.alert').click(function () {
                $(this).fadeOut(300, function () {
                    $(this).remove();
                });
            });
        });
    </script>
}