@{
    ViewBag.Title = "Resident Portal - Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .resident-login {
        min-height: 100vh;
        background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
        color: white;
        padding: 20px;
    }

    .login-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        padding: 30px;
        backdrop-filter: blur(10px);
    }

    .login-header {
        text-align: center;
        margin-bottom: 30px;
    }

        .login-header h2 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .login-header p {
            opacity: 0.9;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: 600;
        }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background: rgba(255, 255, 255, 0.9);
    }

    .btn-login {
        background: #e74c3c;
        color: white;
        padding: 15px;
        border: none;
        border-radius: 5px;
        font-size: 1.1rem;
        cursor: pointer;
        width: 100%;
        margin-bottom: 20px;
    }

        .btn-login:hover {
            background: #c0392b;
        }

    .btn-register {
        background: #3498db;
        color: white;
        padding: 15px;
        border: none;
        border-radius: 5px;
        font-size: 1.1rem;
        cursor: pointer;
        width: 100%;
        text-decoration: none;
        display: block;
        text-align: center;
    }

        .btn-register:hover {
            background: #2980b9;
        }
</style>

<div class="resident-login">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h2>Resident Portal</h2>
                <p>Access your security services</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            @using (Html.BeginForm("Dashboard", "Resident", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
                </div>

                <button type="submit" class="btn-login">Login</button>
            }

            <a href="@Url.Action("Register", "Resident")" class="btn-register">
                Create New Account
            </a>

            <div style="text-align: center; margin-top: 20px;">
                <a href="@Url.Action("ForgotPassword", "Resident")" style="color: #3498db;">Forgot Password?</a>
            </div>
        </div>
    </div>
</div>