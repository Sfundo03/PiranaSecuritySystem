@model IEnumerable<PiranaSecuritySystem.Models.TrainingSession>

@{
    ViewBag.Title = "Training Sessions";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>@ViewBag.Title
                    </h4>
                    @Html.ActionLink("Back", "Dashboard", "Instructor", null, new { @class = "btn btn-light btn-sm" })
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-primary">
                                <tr>
                                    <th>Title</th>
                                    <th>Site</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Capacity</th>
                                    <th width="180">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong class="text-primary">@Html.DisplayFor(m => item.Title)</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@Html.DisplayFor(m => item.Site)</span>
                                        </td>
                                        <td>@item.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>@item.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>
                                            <span class="badge bg-success">@Html.DisplayFor(m => item.Capacity)</span>
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm flex-fill" })
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm flex-fill" })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No training sessions found</h5>
                            <p class="text-muted">Get started by creating your first training session.</p>
                            @Html.ActionLink("Create New Session", "Create", null, new { @class = "btn btn-primary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #2c3e50;
        }

        .btn-group .btn {
            border-radius: 5px;
            margin-right: 5px;
        }

        .badge {
            font-size: 0.8em;
            padding: 0.4em 0.6em;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.05);
        }

        .d-flex.gap-2 .btn {
            min-width: 70px;
            border-radius: 5px;
        }
    </style>
}