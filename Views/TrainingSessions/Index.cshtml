@model IEnumerable<PiranaSecuritySystem.Models.TrainingSession>

@{
    ViewBag.Title = "Training Sessions";
}

<h2>Training Sessions</h2>

<p>
    @Html.ActionLink("Create New Session", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Title)</th>
            <th>@Html.DisplayNameFor(m => m.StartDate)</th>
            <th>@Html.DisplayNameFor(m => m.EndDate)</th>
            <th>@Html.DisplayNameFor(m => m.Capacity)</th>
            <th>@Html.DisplayNameFor(m => m.Location)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Title)</td>
                <td>@item.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@Html.DisplayFor(m => item.Capacity)</td>
                <td>@Html.DisplayFor(m => item.Location)</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
