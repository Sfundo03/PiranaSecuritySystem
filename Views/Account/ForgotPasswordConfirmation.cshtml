@{
    ViewBag.Title = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-section">
    <div class="login-container">
        <div class="login-card">
            <div class="card-header">
                <h4 class="mb-0">Check Your Email</h4>
                <small>Password reset instructions sent</small>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-envelope-circle-check text-success" style="font-size: 48px;"></i>
                </div>
                <p>
                    If the email address you entered is registered as a resident,
                    you will receive an OTP to reset your password.
                </p>
                <p class="text-muted">
                    Please check your email and follow the instructions.
                </p>
                <div class="mt-4">
                    <a href="@Url.Action("Login")" class="btn btn-login">
                        <i class="fas fa-arrow-left me-2"></i>Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>