@model PiranaSecuritySystem.Models.VerifyOTPViewModel
@{
    ViewBag.Title = "Verify OTP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-section">
    <div class="login-container">
        <div class="login-card">
            <div class="card-header">
                <h4 class="mb-0">Verify OTP</h4>
                <small>Enter the OTP sent to your email</small>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("VerifyOTP", "Account", FormMethod.Post, new { @id = "verifyOtpForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Email)

                    <div class="mb-3">
                        <label for="OTP" class="form-label">OTP Code</label>
                        <div class="input-icon">
                            <i class="fas fa-shield-alt"></i>
                            <input type="text" class="form-control" id="OTP" name="OTP"
                                   placeholder="Enter 6-digit OTP" maxlength="6" required
                                   pattern="\d{6}" title="Please enter 6 digits">
                        </div>
                        @Html.ValidationMessageFor(m => m.OTP, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-login w-100 text-white">
                        <i class="fas fa-check-circle me-2"></i>Verify OTP
                    </button>

                    <div class="text-center mt-3">
                        <p class="text-muted">
                            Didn't receive OTP?
                            <a href="@Url.Action("ForgotPassword")">Resend OTP</a>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Auto-tab between OTP digits (if you want to implement OTP input boxes)
            const otpInput = document.getElementById('OTP');
            otpInput.addEventListener('input', function () {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
        });
    </script>
}