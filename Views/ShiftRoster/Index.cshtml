@model List<PiranaSecuritySystem.Models.RosterDisplayViewModel>

@{
    ViewBag.Title = "Shift Rosters";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shift Rosters - PIRANA GUARDING</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #0069aa;
            --secondary-blue: #004a7c;
            --accent-orange: #f26522;
            --light-bg: #f8f9fa;
            --dark-text: #333333;
            --light-text: #6c757d;
            --border-color: #dee2e6;
        }

        body {
            background-color: var(--light-bg);
            font-family: 'Roboto', sans-serif;
            color: var(--dark-text);
            padding: 20px;
        }

        .container {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
            padding: 25px;
            margin-top: 20px;
            border: 1px solid var(--border-color);
        }

        .page-header {
            border-bottom: 2px solid var(--primary-blue);
            padding-bottom: 15px;
            margin-bottom: 25px;
        }

        .logo {
            font-size: 24px;
            font-weight: 700;
            color: var(--primary-blue);
            margin-bottom: 0;
        }

        .subtitle {
            font-size: 14px;
            color: var(--light-text);
            font-weight: 400;
        }

        h2 {
            color: var(--primary-blue);
            font-weight: 600;
        }

        .btn-primary {
            background: var(--primary-blue);
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background: var(--secondary-blue);
            }

        .btn-warning, .btn-danger, .btn-sm {
            padding: 5px 10px;
            font-size: 14px;
            border-radius: 4px;
            font-weight: 500;
        }

        .table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
            margin-top: 20px;
        }

            .table th {
                background-color: var(--primary-blue);
                color: white;
                font-weight: 500;
                padding: 12px 15px;
            }

            .table td {
                padding: 12px 15px;
                vertical-align: middle;
                border-top: 1px solid var(--border-color);
            }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 105, 170, 0.05);
        }

        .badge {
            padding: 5px 8px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 500;
            margin-bottom: 5px;
            display: inline-block;
        }

        .badge-primary {
            background-color: var(--primary-blue);
            color: white;
        }

        .badge-secondary {
            background-color: var(--light-text);
            color: white;
        }

        .badge-light {
            background-color: #f8f9fa;
            color: var(--dark-text);
            border: 1px solid var(--border-color);
        }

        .badge-info {
            background-color: #17a2b8;
            color: white;
        }

        .site-badge {
            background-color: #6c757d;
            color: white;
            padding: 3px 8px;
            border-radius: 4px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row page-header">
            <div class="col-md-6">
                <h2 class="logo">PIRANA GUARDING</h2>
                <p class="subtitle">Secure Access Management System</p>
            </div>
            <div class="col-md-6 text-end">
                <h2>Shift Rosters</h2>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <p>
            @Html.ActionLink("Create New Roster", "Create", null, new { @class = "btn btn-primary" })
        </p>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                No shift rosters found. Create your first roster by clicking the button above.
            </div>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Site</th>
                        <th>Day Shift (4 guards)</th>
                        <th>Night Shift (4 guards)</th>
                        <th>Off Duty (4 guards)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.RosterDate.ToString("yyyy-MM-dd")</strong>
                            </td>
                            <td>
                                <span class="site-badge">@item.Site</span>
                            </td>
                            <td>
                                @foreach (var guard in item.DayShiftGuards)
                                {
                                    <span class="badge badge-primary" title="PSIRA: @guard.PSIRAnumber">@guard.FullName</span><br />
                                }
                            </td>
                            <td>
                                @foreach (var guard in item.NightShiftGuards)
                                {
                                    <span class="badge badge-secondary" title="PSIRA: @guard.PSIRAnumber">@guard.FullName</span><br />
                                }
                            </td>
                            <td>
                                @foreach (var guard in item.OffDutyGuards)
                                {
                                    <span class="badge badge-light" title="PSIRA: @guard.PSIRAnumber">@guard.FullName</span><br />
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { date = item.RosterDate.ToString("yyyy-MM-dd"), site = item.Site }, new { @class = "btn btn-warning btn-sm" })
                                @Html.ActionLink("Delete", "Delete", new { date = item.RosterDate.ToString("yyyy-MM-dd"), site = item.Site }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>