@model List<PiranaSecuritySystem.Models.RosterDisplayViewModel>

@{
    ViewBag.Title = "Shift Rosters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Shift Rosters</h1>
        <div>
            <a href="@Url.Action("Dashboard", "Instructor")" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Rosters Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Shift Roster Records</h6>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

        <div class="mb-3">
            @Html.ActionLink("Create New Roster", "Create", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete Entire Roster", "DeleteAll", "ShiftRoster", null, new
            {
    @class = "btn btn-danger",
    onclick = "return confirm('⚠ Are you sure you want to delete ALL rosters? This action cannot be undone.');"
})
        </div>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Site</th>
                                <th>Day Shift (4 guards)</th>
                                <th>Night Shift (4 guards)</th>
                                <th>Off Duty (4 guards)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.RosterDate.ToString("yyyy-MM-dd")</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@item.Site</span>
                                    </td>
                                    <td>
                                        @foreach (var guard in item.DayShiftGuards)
                                        {
                                            <span class="badge bg-success mb-1" title="PSIRA: @guard.PSIRAnumber">@guard.FullName</span><br />
                                        }
                                    </td>
                                    <td>
                                        @foreach (var guard in item.NightShiftGuards)
                                        {
                                            <span class="badge bg-info mb-1" title="PSIRA: @guard.PSIRAnumber">@guard.FullName</span><br />
                                        }
                                    </td>
                                    <td>
                                        @foreach (var guard in item.OffDutyGuards)
                                        {
                                            <span class="badge bg-secondary mb-1" title="PSIRA: @guard.PSIRAnumber">@guard.FullName</span><br />
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @Html.ActionLink("Delete", "Delete", new { date = item.RosterDate.ToString("yyyy-MM-dd"), site = item.Site }, new { @class = "btn btn-danger btn-sm" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No shift rosters found. Create your first roster by clicking the button above.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#dataTable').DataTable({
                "order": [[0, "desc"]],
                "pageLength": 25,
                "language": {
                    "search": "Search rosters:",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)"
                }
            });
        });
    </script>
}